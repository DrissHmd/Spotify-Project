{% extends 'base.html.twig' %}

{% block title %}Search Artists{% endblock %}

{% block body %}
    <main>
        <h1>ðŸŽ€ Projet Spotify ðŸŽ€</h1>

        {% if query is not empty %}
            <h2>RÃ©sultats pour "{{ query }}"</h2>

            {% if results is not empty %}
                <div class="results-grid">
                    {% for artist in results %}
                        <div class="artist-card" data-id="{{ artist.artistId }}">
                            <a href="{{ path('artist_id', { id: artist.artistId }) }}">
                                <img src="{{ artist.image }}" alt="{{ artist.name }} cover">
                                <div class="artist-info">
                                    <h3>{{ artist.name }}</h3>
                                    <p>Genres : {{ artist.genres | join(', ') }}</p>
                                    <p>Followers : {{ artist.followers }}</p>
                                </div>
                            </a>
                            <a href="{{ path('app_favorite_artist_add', { id: artist.artistId }) }}" class="add-fav">Ajouter en favoris</a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucun artiste trouvÃ© pour "{{ query }}".</p>
            {% endif %}
        {% else %}
            <p>Rechercher la musique ou l'artiste que vous souhaitez</p>
        {% endif %}
    </main>

    <style>
        main {
            padding: 20px;
            background-color: #f8d1e1;
            font-family: 'Comic Sans MS', cursive;
        }

        h1 {
            font-size: 2.5rem;
            color: #d5006d;
            text-align: center;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 1.8rem;
            color: #d5006d;
            text-align: center;
            margin-bottom: 20px;
        }

        .results-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            justify-items: center;
        }

        .artist-card {
            background-color: #ffb3e6;
            border-radius: 15px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            opacity: 0;
            transform: translateY(20px);
        }

        .artist-card.show {
            opacity: 1;
            transform: translateY(0);
        }

        .artist-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .artist-card img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            border: 3px solid #d5006d;
        }

        .artist-info {
            margin-top: 10px;
        }

        .artist-info h3 {
            font-size: 1.5rem;
            margin: 5px 0;
            color: #d5006d;
        }

        .artist-info p {
            font-size: 1rem;
            color: #a64d79;
        }

        .add-fav {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #d5006d;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .add-fav:hover {
            background-color: #b0004e;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const cards = document.querySelectorAll('.artist-card');

            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('show');
                }, index * 100);
            });

            cards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transition = "transform 0.2s, box-shadow 0.2s";
                    card.style.transform = "scale(1.1)";
                    card.style.boxShadow = "0 8px 20px rgba(0, 0, 0, 0.2)";
                });

                card.addEventListener('mouseleave', () => {
                    card.style.transform = "scale(1)";
                    card.style.boxShadow = "0 4px 10px rgba(0, 0, 0, 0.1)";
                });
            });
        });
    </script>
{% endblock %}
