{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
    <main>
        <h1>ðŸŽ€ Projet Spotify ðŸŽ€</h1>

        {% if query is not empty %}
            <h2>RÃ©sultats pour "{{ query }}"</h2>

            {% if results is not empty %}
                <div class="results-grid">
                    {% for track in results %}
                        <div class="track-card" data-id="{{ track.trackId }}">
                            <a href="{{ path('track_id', { id: track.trackId }) }}">
                                <img src="{{ track.picture }}" alt="{{ track.trackName }} cover">
                                <div class="track-info">
                                    <h3>{{ track.trackName }}</h3>
                                    <p>par {{ track.artistName }}</p>
                                </div>
                            </a>
                            <a href="{{ path('app_favorite_add', { id : track.trackId }) }}" class="add-fav">Ajouter en favoris</a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucun morceau trouvÃ© pour "{{ query }}".</p>
            {% endif %}
        {% else %}
            <p>Rechercher la musique ou l'artiste que vous souhaitez</p>
        {% endif %}
    </main>

    <style>
        /* Styles CSS existants */
        main {
            padding: 20px;
            background-color: #f8d1e1;
            font-family: 'Comic Sans MS', cursive;
        }

        h1 {
            font-size: 2.5rem;
            color: #d5006d;
            text-align: center;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 1.8rem;
            color: #d5006d;
            text-align: center;
            margin-bottom: 20px;
        }

        .results-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            justify-items: center;
        }

        .track-card {
            background-color: #ffb3e6;
            border-radius: 15px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            opacity: 0; /* Initial opacity for animation */
            transform: translateY(20px); /* Initial position for animation */
        }

        .track-card.show {
            opacity: 1; /* Fully visible */
            transform: translateY(0); /* Move to normal position */
        }

        .track-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .track-card img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            border: 3px solid #d5006d;
        }

        .track-info {
            margin-top: 10px;
        }

        .track-info h3 {
            font-size: 1.5rem;
            margin: 5px 0;
            color: #d5006d;
        }

        .track-info p {
            font-size: 1rem;
            color: #a64d79;
        }

        .add-fav {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #d5006d;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .add-fav:hover {
            background-color: #b0004e;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const cards = document.querySelectorAll('.track-card');

            // Animation d'entrÃ©e
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('show'); // Ajoute la classe pour rendre la carte visible
                }, index * 100); // DÃ©lai d'animation en cascade
            });

            // Animation au survol des cartes
            cards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transition = "transform 0.2s, box-shadow 0.2s"; // Animation lissÃ©e
                    card.style.transform = "scale(1.1)"; // Scale lors du survol
                    card.style.boxShadow = "0 8px 20px rgba(0, 0, 0, 0.2)"; // Ombre plus forte
                });

                card.addEventListener('mouseleave', () => {
                    card.style.transform = "scale(1)"; // Retour Ã  la taille normale
                    card.style.boxShadow = "0 4px 10px rgba(0, 0, 0, 0.1)"; // Ombre d'origine
                });
            });
        });
    </script>
{% endblock %}
