{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
    <header>
        <h1>Spotify Project</h1>
    </header>

    <main>
        {% if query is not empty %}
            <h2>Results for "{{ query }}"</h2>

            {% if results is not empty %}
                <div class="results-grid">
                    {% for track in results %}
                        <div class="track-card">
                            <a href="{{ path('track_id', { id: track.id }) }}">
                                <img src="{{ track.pictureLink }}" alt="{{ track.name }} cover">
                                <div class="track-info">
                                    <h3>{{ track.name }}</h3>
                                    <p>by {{ track.artist }}</p>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>No tracks found for "{{ query }}".</p>
            {% endif %}
        {% else %}
            <p>Rechercher le son que vous souhaitez</p>
        {% endif %}
    </main>

    <style>
        header {
            margin-bottom: 20px;
        }

        h1 {
            font-size: 2.5rem;
            color: #1DB954;
        }

        .search-form input[type="text"] {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 300px;
            font-size: 1rem;
            background-color: #282828;
            color: #fff;
        }

        .search-form button {
            padding: 10px 15px;
            border-radius: 5px;
            border: none;
            background-color: #1DB954;
            color: white;
            cursor: pointer;
            font-size: 1rem;
        }

        .search-form button:hover {
            background-color: #17a94a;
        }

        .results-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .track-card {
            background-color: #181818;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            transition: transform 0.2s;
        }

        .track-card:hover {
            transform: scale(1.05);
        }

        .track-card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .track-info {
            margin-top: 10px;
        }

        .track-info h3 {
            font-size: 1.2rem;
            margin: 0;
        }

        .track-info p {
            font-size: 1rem;
            color: #b3b3b3;
        }
    </style>
{% endblock %}
